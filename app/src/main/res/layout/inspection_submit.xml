<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/submit_toolbar"
        layout="@layout/inspection_submit_toolbar"/>

    <TextView
        android:id="@+id/txt_checkcomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Complete"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@color/lime_green"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textSize="25sp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textStyle="bold"
        android:textColor="@color/gold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "@string/result_comment"
        android:textSize="18sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/btn_light_blue_selector"
            android:text="Submit Inspection"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</LinearLayout>