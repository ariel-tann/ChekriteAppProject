<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories.SignOut">


    <TextView
        android:id="@+id/sign_out_header"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/lime_green"

        android:gravity="center"
        android:text="Sign Out"
        android:textColor="@color/white"
        android:textSize="46sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/sign_out_info"
        android:layout_width="379dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="204dp"
        android:paddingHorizontal="50dp"
        android:text='Tap "Sign Out" to sign out of ChekRite'

        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sign_out_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_out_header"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/sign_out_btn"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"

        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn_shape_round_conner"
        android:gravity="center"
        android:text="SIGN OUT"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/cancel_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/cancel_btn"

        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="44dp"
        android:background="@drawable/btn_gray"
        android:gravity="center"
        android:text="CANCEL"
        android:textAllCaps="false"
        android:textColor="@color/dark_gray"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>